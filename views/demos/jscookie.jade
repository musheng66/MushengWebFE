                                            });

                                            //删除cookie
                                            $("#cookie_del").click(function(){
                                                //若指定了作用域，则需写上相同的path配置方可删除。
                                                Cookies.remove('cookieName', { path : '/' });
                                            });

                                            //获取cookie
                                            $("#cookie_get").click(function(){
                                                //获取指定键名的cookie的值。获取所有则用$.cookie()方法。
