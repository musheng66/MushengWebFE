        script(type='text/javascript').
            $(function () {
                //新建cookie
                $("#cookie_add").click(function () {
                    Cookies.set('jscusname', '观察者');
                    //layer
                    layer.alert('已新增cookie，内容为：{ “jscusname”：“观察者” }。点击&lt;获取cookie&gt;按钮可查看', {
                        title: '提示信息',
                        icon: 6
                    });
                });

                //编辑cookie
                $("#cookie_edit").click(function () {
                    var jscusname = Cookies.get('jscusname');
                    if (!jscusname || jscusname.length == 0) {
                        //layer
                        layer.alert('未找到指定cookie', {
                            title: '提示信息',
                            icon: 5
                        });
                        return;
                    }
                    Cookies.set('jscusname', '守护者');
                    //layer
                    layer.alert('已修改cookie，内容为：{ “jscusname”：“观察者已改变为守护者” }。点击&lt;获取cookie&gt;按钮可查看', {
                        title: '提示信息',
                        icon: 6
                    });
                });

                //删除cookie
                $("#cookie_del").click(function () {
                    Cookies.remove('jscusname');
                    //layer
                    layer.alert('已删除cookie', {
                        title: '提示信息',
                        icon: 5
                    });
                });

                //获取cookie
                $("#cookie_get").click(function () {
                    var jscusname = Cookies.get('jscusname');
                    if (!jscusname || jscusname.length == 0) {
                        jscusname = '空';
                    }
                    //layer
                    layer.alert('cookie内容为 : ' + jscusname, {
                        title: '提示信息'
                    });
                });
            });